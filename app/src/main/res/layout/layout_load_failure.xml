<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
    <LinearLayout
        android:id="@+id/layout_failure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/load_img_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_load_failure"
            />
        <Button
            android:id="@+id/btn_load_again"
            android:layout_width="85dp"
            android:layout_height="25dp"

            android:layout_marginTop="30dp"
            android:background="@mipmap/bt_load_again"
            android:layout_below="@id/load_img_again"
            android:text="点击重新加载"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <com.hxtao.qmd.hxtpay.widgets.LoadingView
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.hxtao.qmd.hxtpay.widgets.LoadingView>


</RelativeLayout>
