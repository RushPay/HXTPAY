<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_infor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hxtao.qmd.hxtpay.activity.AddInforActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:text="头像"/>
        <ImageView
            android:id="@+id/icon_info_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/add_friend"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:text="用户名"/>

        <EditText
            android:id="@+id/name_info_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:text="支付密码"/>

        <EditText
            android:id="@+id/pwd_info_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:text="确认支付密码"/>

        <EditText
            android:id="@+id/surepwd_info_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberPassword"/>
    </LinearLayout>
    <Button
        android:id="@+id/sure_info_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_logo_margin_50dp"
        android:background="@drawable/shape_ll"
        android:layout_marginTop="20dp"
        android:text="@string/paty_sure"
        />
</LinearLayout>
