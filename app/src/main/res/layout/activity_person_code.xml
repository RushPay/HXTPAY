<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.hxtao.qmd.hxtpay.activity.PersonCodeActivity">

    <include
        android:id="@+id/title_rl_personcode_act"
        layout="@layout/back_topbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_img_personcode_act"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/personicon"
                app:civ_border_color="@color/colorGray"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/name_tv_personcode_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icon_img_personcode_act"
                android:layout_toRightOf="@id/icon_img_personcode_act"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/phone_tv_personcode_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_tv_personcode_act"
                android:layout_toRightOf="@id/icon_img_personcode_act"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/code_img_personcode_act"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</RelativeLayout>
